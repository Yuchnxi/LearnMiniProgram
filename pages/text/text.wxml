<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World</text>
<text>你好小程序\n</text>

<!-- 2.selectable: true -->
<!-- 默认情况下 text 中的文本长按是不能选中 -->
<text selectable="{{true}}">Hello yuchenxi\n</text>
<text selectable>Hello yuchenxi\n</text>

<!-- 3.space: 决定文本空格的大小 -->
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>

<!-- 4.decode：是否解码文本 -->
<text decode>5 &gt; 3</text>