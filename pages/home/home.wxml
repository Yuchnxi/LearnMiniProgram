<!--pages/home/home.wxml-->
<!-- 1、小程序的数据绑定: {{}} -> Mustache -->
<view>hello {{name}}</view>

<!-- 2、列表展示: wx:for -->
<view>{{students[0].name}}</view>

<view wx:for="{{students}}" wx:key="item">{{item.name}}</view>

<!-- 3、事件监听改变data -->
<view>当前计数：{{counter}}</view>
<button size="mini" bindtap="handleBtnClick">+</button>
<button size="mini" bindtap="handleSubtraction">-</button>

<button size="mini" 
        bindtap="handleGetUserInfo" 
        bindgetuserinfo="getUserInfo">
        获取授权
</button>

<open-data type="userCity"></open-data>

<view wx:for="{{list}}" wx:key="item">{{item.title}}</view>